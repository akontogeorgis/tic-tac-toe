{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
		"indent": ["error","tab",{ "SwitchCase": 1 }],
		"no-tabs": 0,
		"react/jsx-indent-props":"off",
		"react/jsx-indent":"off"
	}
}
